@model FurmularioDonaciones.Models.FormularioDonacion

@{
    ViewData["Title"] = "RegistroDonación";
}

<h1>Registro Donación</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="FormularioDonacionCreate" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group">
                <label asp-for="CiDonante" class="control-label">Cédula:</label>
                <input asp-for="CiDonante" class="form-control" />
                <span asp-validation-for="CiDonante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombreDonante" class="control-label">Nombre:</label>
                <input asp-for="NombreDonante" class="form-control" />
                <span asp-validation-for="NombreDonante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApellidoDonante" class="control-label">Apellido:</label>
                <input asp-for="ApellidoDonante" class="form-control" />
                <span asp-validation-for="ApellidoDonante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdMarca" class="control-label">Marca:</label>
                <select asp-for="IdMarca" class="form-control" asp-items="@(new SelectList(ViewBag.ListaMarcasVista, "value", "text"))"></select>
            </div>
            <div class="form-group">
                <label asp-for="LoteProductoDonancion" class="control-label">Número de Lote:</label>
                <input asp-for="LoteProductoDonancion" class="form-control" />
                <span asp-validation-for="LoteProductoDonancion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaVencimientoProducto" class="control-label">Fecha de Vencimiento:</label>
                <input asp-for="FechaVencimientoProducto" class="form-control datepicker" />
                <span asp-validation-for="FechaVencimientoProducto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Foto" class="control-label">Foto de Producto:</label>
                <input id="Foto" type="file" class="form-control" name="Foto" />
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
            @if (TempData["MensajeIngreso"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show">
                    @TempData["MensajeIngreso"].ToString()
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
        </form>
    </div>
</div>



@section Scripts {

    <script type="text/javascript">
        $(document).ready(function () {
            $('.datepicker').datepicker(
                {
                    format: 'dd/mm/yyyy'

                });
        });

    </script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
