@model FurmularioDonaciones.Models.Marcas

@{
    ViewData["Title"] = "CrearMarca";
}

<h1>Crear Marca</h1>


<hr />

<div class="row">

    <div class="col-md-4">
        <form asp-action="CrearMarca">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreMarca" class="control-label">Nombre Marca:</label>
                <input asp-for="NombreMarca" class="form-control" />
                <span asp-validation-for="NombreMarca" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>

            @if (TempData["MensajeIngreso"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show">
                    @TempData["MensajeIngreso"].ToString()
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
