@model FurmularioDonaciones.Models.Usuario

@{
    ViewData["Title"] = "CrearUsuario";
}

<h1>Crear Usuario</h1>


<hr />



<div class="row">
    <div class="col-md-4">
        <form asp-action="CrearUsuario">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdRol" class="control-label">Rol:</label>
                <select asp-for="IdRol" class="form-control" asp-items="@(new SelectList(ViewBag.ListaRolesVista,"value","text"))"></select>
            </div>
            <div class="form-group">
                <label asp-for="NombreUsuario" class="control-label">Nombre</label>
                <input asp-for="NombreUsuario" class="form-control" />
                <span asp-validation-for="NombreUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApellidoUsuario" class="control-label">Apellido</label>
                <input asp-for="ApellidoUsuario" class="form-control" />
                <span asp-validation-for="ApellidoUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EMailUsuario" class="control-label">E-mail:</label>
                <input asp-for="EMailUsuario" class="form-control" />
                <span asp-validation-for="EMailUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasswordUsuario" class="control-label">Clave</label>
                <input type="password" name="PasswordUsuario" id="PasswordUsuario" class="form-control" />
                <span asp-validation-for="PasswordUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
            @if (TempData["MensajeExitoso"] != null)
            {
                <div class="alert alert-success  alert-dismissible fade show">
                    @TempData["MensajeExitoso"].ToString()
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
            else if (TempData["MensajeFallido"] != null)
            {
                <div class="alert alert-danger  alert-dismissible fade show">
                    @TempData["MensajeFallido"].ToString()
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
